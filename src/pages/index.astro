---
import Layout from "../layouts/Layout.astro";
import Card from "../components/Card.astro";
import { coolers } from "../data/data-neveras.ts";


const datos = coolers;
---

<Layout title="Welcome to Astro.">
  <main class="min-h-screen">
    <section
      class="mx-auto grid max-w-[85rem] gap-4 px-4 py-14 sm:px-6 md:grid-cols-2 md:items-center md:gap-8 lg:px-8 2xl:max-w-full"
    >
      <div>
        <h1
          class="text-center font-pepsi-extended text-white block text-balance text-3xl font-golda font-bold tracking-wide text- sm:text-4xl lg:text-6xl lg:leading-tight"
        >
          SPECT SHEET
        </h1>

        <p
          class="text-center mt-3 text-pretty text-xl leading-relaxed text-[#211C6B] lg:w-4/5"
        >
          Coolers Criotec & Fogel
        </p>
        <div class="mt-7 grid w-full gap-3 sm:inline-flex"></div>
      </div>
      <div class="w-full grid grid-flow-row grid-cols-2 md:grid-cols-2 gap-5">
        {
          datos.map((dato) => {
            return (
              <Card
                href={dato.modelo}
                title={dato.modelo}
                description={dato.details}
              />
            );
          })
        }
      </div>
    </section>
  </main>
</Layout>

